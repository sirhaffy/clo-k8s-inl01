# Example terraform.tfvars file
# Copy this to terraform.tfvars and customize values

# Basic configuration
project_name = "todo-app"
location     = "West Europe"
environment  = "dev"

# AKS cluster settings - optimized for Azure for Students
min_node_count = 2
max_node_count = 3
vm_size        = "Standard_B2s" # Education account on Azure

# Kubernetes version (check latest with: az aks get-versions --location "West Europe")
kubernetes_version = "1.31.1"

# Example for different environments:
#
# For development (minimal but functional):
# min_node_count = 2
# max_node_count = 3
# vm_size = "Standard_B2s"  # ~$60/month for 2 nodes
#
# For production:
# min_node_count = 3
# max_node_count = 5
# vm_size = "Standard_D2s_v3"